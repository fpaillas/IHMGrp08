>>>>>>> 594e008b8381b70b451cea980d0a90d57066f2c7

# Base de données de recettes (simulée)
recipes = [
    {"name": "Pâtes à la carbonara", "ingredients": ["pâtes", "œufs", "lardons", "parmesan"]},
    {"name": "Salade César", "ingredients": ["laitue", "poulet", "croûtons", "parmesan", "sauce César"]},
    {"name": "Pizza Margherita", "ingredients": ["pâte à pizza", "tomates", "mozzarella", "basilic"]}
]

def find_recipes(ingredients):
    matching_recipes = []
    for recipe in recipes:
        if all(ingredient in recipe["ingredients"] for ingredient in ingredients):
            matching_recipes.append(recipe)
    return matching_recipes

@app.route('/', methods=['GET', 'POST'])
def index():
    if request.method == 'POST':
        user_ingredients = request.form.get('ingredients').split(',')
        matching_recipes = find_recipes(user_ingredients)
        return render_template('index.html', recipes=matching_recipes)
    return render_template('index.html', recipes=[])

if __name__ == '__main__':
    app.run(debug=True)
